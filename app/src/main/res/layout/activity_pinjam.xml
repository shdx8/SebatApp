<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/abuspasi"
    tools:context=".PinjamActivity">
    <Button
        android:id="@+id/btn_kembali"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/back"
        />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/form">
            <TextView
                android:id="@+id/textNama_peminjam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/medium"
                android:text="Nama Peminjam"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/inp_nama_peminjam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/textNo_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/medium"
                android:text="Nomor Handphone"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/inp_no_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/textkabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/medium"
                android:text="Pilih Jenis Kabel"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <RadioGroup
                android:id="@+id/radio_kabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/inp_lightning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/lightning"
                    android:text="lightning"
                    android:textColor="#fff"
                    android:textSize="1px"/>


                <RadioButton
                    android:id="@+id/inp_micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:button="@drawable/micro"
                    android:text="micro"
                    android:textColor="#fff"
                    android:textSize="1px"/>

                <RadioButton
                    android:id="@+id/inp_typec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/typec"
                    android:text="type-c"
                    android:textColor="#fff"
                    android:textSize="1px"/>
            </RadioGroup>

            <TextView
                android:id="@+id/textdurasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/medium"
                android:text="Durasi Pinjam"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <RadioGroup
                    android:id="@+id/radio_durasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="30 Menit"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="2 Jam"
                            android:layout_marginLeft="50dp"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/inp_30"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="50dp"
                            android:text="1000">
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/inp_2"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="50dp"
                            android:text="4000"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="60 Menit"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="5 Jam"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/inp_60"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_below="@+id/inp_30"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="50dp"
                            android:text="2000" />

                        <RadioButton
                            android:id="@+id/inp_5"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:text="10000" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="90 Menit"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="24 Jam"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/inp_90"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="50dp"
                            android:text="3000" />

                        <RadioButton
                            android:id="@+id/inp_24"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:text="25000" />
                    </TableRow>
                </RadioGroup>
            </TableLayout>
            <Button
                android:id="@+id/btn_pinjam"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="@drawable/button_rounded"
                android:fontFamily="@font/extrabold"
                android:text="Pinjam"
                android:textAllCaps="false"
                android:textColor="@color/black" />
    </LinearLayout>
    </LinearLayout>
